"VertexlitGeneric"
{
	"$baseTexture" "models\weapons\c_items\sawblade.vtf"

	"$angle" 0.0
    "$translate" "[0.0 0.0]"
    "$center" "[0.5 0.5]"
		
	"$phong" "1"
	"$phongexponent" "50"
	"$phongboost" "1"	
	"$lightwarptexture" "models\lightwarps\weapon_lightwarp"
//	"$lightwarptexture" "models\player\pyro\pyro_lightwarp"
	"$phongfresnelranges"	"[1.5 3 1]"
	"$basemapalphaphongmask" "1"
	
	"$rimlight" "1"
	"$rimlightexponent" "25"	
	"$rimlightboost" ".5"

	"360?$color2" "[ 0.9 0.8 0.8 ]"

	"$glowcolor" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"Proxies"
	{
		"weapon_invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"LinearRamp"
       {
                "rate" -2500
                "initialValue" 0.0
                "resultVar" "$angle"
       }

        "TextureTransform"
       {
                "translateVar" "$translate"
                "rotateVar" "$angle"
                "centerVar" "$center"
                "resultVar" "$basetexturetransform"
       }
	}
}
