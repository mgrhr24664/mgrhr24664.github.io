"VertexLitGeneric"
{
	"$basetexture"          "models/workshop/weapons/c_models/c_space_bow/c_space_bow_blue"
	"$lightwarptexture" "models/lightwarps/weapon_lightwarp"

	"$detail" "models/workshop/weapons/c_models/c_space_bow/c_space_bow_energystreak"
	"$detailblendmode" "1"
	"$detailscale" "2"

	
	"$phong" "1"
	"$phongexponent" "3"
	"$phongboost" ".2"	
	"$phongfresnelranges"	"[1 1 1]"
	"$basemapalphaphongmask"	"1"

	"$rimlight"             "1"     // To enable rim lighting (requires phong)
	"$rimlightexponent"     "4"     // Exponent for phong component of rim 
	"$rimlightboost"        "2"     // Boost for ambient cube component of rim lighting
	"$halflambert"			"1"

	//"$envmap" "models/workshop/weapons/c_models/c_space_bow/c_space_bow_energy_cubemap"
	//"$envmapcontrast" ".2"
	//"$envmaptint" "[0.5 0.7 1]"

	"$selfillum" "1"
	"$selfIllumFresnel" "1"
	"$selfIllumFresnelMinMaxExp" "[.1 1.1 1]"

	"$glowcolor" "1"


	// Variables for the cloak effect
	"$cloakPassEnabled"     "1"
	"$sheenPassEnabled" "1"

	"$sheenmap" 		"cubemaps\cubemap_sheen001"
	"$sheenmapmask" 		"Effects\AnimatedSheen\animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"$yellow" "0"

	// The order of the proxies is important!
	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
		"TextureScroll"
		{
		"textureScrollVar" "$detailtexturetransform"
		"textureScrollRate" 0.1
		"textureScrollAngle" 0
 		 }
		Sine
		{
			resultVar	$selfillumtint // The shader parameter to be manipulated
			sineperiod	3
			sinemin		.1
			sinemax		2
		}
        	}
}